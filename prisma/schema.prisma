// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Compra{
  id Int @id @default(autoincrement())
  fecha DateTime
  total Float
  articulos Int
  noticket String
  usuario User @relation(fields: [idUsuario], references: [id])
  idUsuario Int
}

model User{
  id Int @id @default(autoincrement())
  nombre String
  paterno String
  email String @unique
  password String
  tokenConfirmacion String?
  tokenCambio String?
  compras Compra[]
}